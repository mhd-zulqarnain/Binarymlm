<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorRed</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SeachViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
    </style>

    <style name="pagertabstrip">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

<!--progress bar style-->
    <style name="CustomProgess" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Updatingâ€¦</item>
        <item name="DialogSpotColor">@color/colorRed</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <!--Text style-->
    <style name="CustomBlacktextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CustomHeaderBlacktextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CustomWhitetextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#f9f9f9</item>
    </style>

    <style name="CustomHeadingtextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="WalletheadingStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="WalletContentStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ProfileEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#565656</item>
        <item name="android:textColor">#313131</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">#a0a1a1</item>
    </style>

    <style name="ConfirmationStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#847f7f</item>
    </style>
</resources>
