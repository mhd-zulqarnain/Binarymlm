<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorRed</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/background_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomBlacktextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CustomHeaderBlacktextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CustomHeaderLighttextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CustomWhitetextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#f9f9f9</item>
    </style>
    <style name="CustomHeadingtextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="CustomSpinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
    </style>

    <style name="SeachViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
    </style>

    <style name="pagertabstrip">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
        <item name="android:textColor">#fff</item>
    </style>


</resources>
