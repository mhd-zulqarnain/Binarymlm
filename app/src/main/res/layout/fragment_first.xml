<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="12dp"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="11.6"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Full Name"
        android:fontFamily="@font/ralewaybold"
        android:textSize="17sp"
        android:textColor="#313131"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:hint="AB Shakoor"
        android:textColorHint="#565656"
        android:backgroundTint="#a0a1a1"
        android:textSize="17sp"
        android:textColor="#313131"
        android:fontFamily="@font/ralewayregular"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="User Name"
        android:fontFamily="@font/ralewaybold"
        android:textSize="17sp"
        android:textColor="#313131"

        />

    <EditText
        android:id="@+id/ed_username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:backgroundTint="#a0a1a1"
        android:fontFamily="@font/ralewayregular"
        android:hint="Shakoor786"
        android:textColor="#313131"
        android:textColorHint="#565656"
        android:textSize="17sp"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        />





    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Address"
        android:fontFamily="@font/ralewaybold"
        android:textSize="17sp"
        android:textColor="#313131"
        />

    <EditText
        android:id="@+id/ed_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:backgroundTint="#a0a1a1"
        android:fontFamily="@font/ralewayregular"
        android:hint="Block 2, Bahadur abad."
        android:textColor="#313131"
        android:textColorHint="#565656"
        android:textSize="17sp"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Country"
        android:fontFamily="@font/ralewaybold"
        android:textSize="17sp"
        android:textColor="#313131"
        />

    <EditText
        android:id="@+id/ed_country"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:backgroundTint="#a0a1a1"
        android:fontFamily="@font/ralewayregular"
        android:hint="Pakistan"
        android:textColor="#313131"
        android:textColorHint="#565656"
        android:textSize="17sp"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:digits="abcdefghijklmnopqrstuvwxyz"
        />


    <Button
        android:id="@+id/btn_updateprofile"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_weight="1.3"
        android:background="@color/colorRed"
        android:fontFamily="@font/ralewaybold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Update Profile"
        android:textColor="@color/colorWhite" />



</LinearLayout>



</LinearLayout>