<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <ImageView
            android:id="@+id/image_thumbnail"
            android:background="#c5b70303"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_play_circle"
            android:layout_weight="1"
            android:padding="3dp"
            android:scaleType="centerCrop"

            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/video_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/video_thumbnail_image_view"
                android:layout_toRightOf="@+id/video_thumbnail_image_view"
                android:text="Title of Video"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/video_title_descripton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/video_thumbnail_image_view"
                android:layout_toRightOf="@+id/video_thumbnail_image_view"
                android:text="Title of Video"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>