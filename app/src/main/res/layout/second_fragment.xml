<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="13.8">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight=".5"
            android:fontFamily="@font/ralewaybold"
            android:text="Password"
            android:textColor="#313131"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:backgroundTint="#a0a1a1"
            android:drawableRight="@drawable/icon_pencil"
            android:focusable="false"
            android:fontFamily="@font/ralewayregular"
            android:hint="Enter Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#313131"
            android:textColorHint="#565656"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:fontFamily="@font/ralewaybold"
            android:text="Phone"
            android:textColor="#313131"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:backgroundTint="#a0a1a1"
            android:fontFamily="@font/ralewayregular"
            android:hint="Enter  Phone"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#313131"
            android:textColorHint="#565656"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:fontFamily="@font/ralewaybold"
            android:text="Email"
            android:textColor="#313131"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:backgroundTint="#a0a1a1"
            android:fontFamily="@font/ralewayregular"
            android:hint="Enter  Email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#313131"
            android:textColorHint="#565656"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:fontFamily="@font/ralewaybold"
            android:text="Bank Name "
            android:textColor="#313131"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/ed_bankname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:backgroundTint="#a0a1a1"
            android:fontFamily="@font/ralewayregular"
            android:hint="Enter Bank name"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#313131"
            android:textColorHint="#565656"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/ralewaybold"
            android:text="Account Number"
            android:textColor="#313131"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/ed_accountnumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:backgroundTint="#a0a1a1"
            android:fontFamily="@font/ralewayregular"
            android:hint="Enter Account Number"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="16"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#313131"
            android:textColorHint="#565656"
            android:textSize="17sp" />


        <Button
            android:id="@+id/btn_updateprivacy"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="1.3"
            android:background="@color/colorRed"
            android:fontFamily="@font/ralewaybold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Update Privacy"
            android:textColor="@color/colorWhite" />


    </LinearLayout>


</LinearLayout>