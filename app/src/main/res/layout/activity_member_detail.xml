<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorWhite"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            style="@style/CustomBlacktextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add members" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_citizen"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/executive" />

        <TextView
                android:id="@+id/tv_username"
            style="@style/CustomBlacktextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr Khan"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/CustomBlacktextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:1231231232123"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_accountNumber"
            style="@style/CustomBlacktextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account:2342-42342-234"
            android:textSize="15sp" />

        <TextView
                android:id="@+id/tv_BankName"
            style="@style/CustomBlacktextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank: hbl"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_SponsorName"
            style="@style/CustomBlacktextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sponser"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>